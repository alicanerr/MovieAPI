@model List<FilmDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <a href="/Film/Ekle" class="btn btn-light waves-effect">EKLE</a>
            
                <div class="table-responsive">

                    <table class="table table-centered table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Film Numarası</th>
                                <th>FilmAd</th>
                                <th>FilmYapimYil</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.FilmAd</td>
                                    <td>@item.FilmYapimYil</td>
                                    <td>
                                        <ul class="list-inline mb-0">
                                            <li class="list-inline-item">
                                                <a class="px-2 text-primary" asp-controller="Film" asp-action="Update" asp-route-id="@item.Id">
                                                    <i class="uil uil-pen font-size-18"></i>
                                                </a>
                                            </li>

                                            <li class="list-inline-item">
                                                <a class="px-2 text-danger" asp-controller="Film" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="uil uil-trash-alt font-size-18"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>




